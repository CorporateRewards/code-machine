<%= form_for :code, url: codes_path do |f| %>

<% if @code.errors.any? %>
	<div id="error_reason">
	<h2>
		<%= pluralize(@code.errors.count, "error") %> prevented this code from being saved:
	</h2>
	<ul>
		<%= @code.errors.full_messages.each do |message| %>
			<li><%= message %></li>
		<% end %>
	</ul>
	</div>
<% end %>

	<p>
		<%= f.label :code %><br>
		<%= f.text_field :code %>
	</p>
	<p>
		<%= f.submit %>
	</p>
	
<% end %>